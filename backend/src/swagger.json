   "paths": {
      "/users": {
         "post": {
            "tags": ["Users"],
            "summary": "Create a new User",
            "description": "Create a new user with name, email, likes, image, password",
            "requestBody": {
               "content": {
                  "application/json": {
                     "schema": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },

                           "email": {
                              "type": "string"
                           },

                           "likes": {
                              "type": "string"
                           },

                           "image": {
                              "type": "string"
                           },

                           "password": {
                              "type": "string"
                           },

                           "confirmPassword": {
                              "type": "string"
                           }

                        },

                        "required": ["name", "email", "password", "confirmPassword"]
                     }
                  }
               }
            },

            "responses": {
               "201": {
                  "description": "new user created",
                  "content": {
                     "application/json": {
                        "schema": {
                           "type": "object",
                           "properties": {
                              "message": {
                                 "type": "string"
                              },

                              "user": {
                                 "type": "object",
                                  "properties": {
                                    "id": {
                                       "type": "string"
                                    },

                                    "name": {
                                       "type": "string"
                                    },

                                    "email": {
                                       "type": "string"
                                    },

                                    "isArtist": {
                                       "type":"boolean"
                                    },

                                    "likes": {
                                       "type": "string"
                                    },

                                    "created_at": {
                                       "type": "string"
                                    }

                                  }
                              },

                              "accessToken": {
                                 "type": "string"
                              },

                              "refreshToken": {
                                 "type": "string"
                              }
                           },

                           "example": {
                              "message": "New user created.",
                              "user": {
                                  "id": "173f94c4-fc0b-4e9d-b4e6-b9f14e05b4d4",
